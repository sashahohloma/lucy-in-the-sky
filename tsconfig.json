{
    "compilerOptions": {
        "outDir": "build",

        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "target": "ES2021",
        "lib": [
            "ES2021",
        ],

        "allowJs": true,
        "declaration": true,
        "removeComments": false,
        "pretty": true,

        "strict": true,

        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "source"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
